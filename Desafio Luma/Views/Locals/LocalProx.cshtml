@model IEnumerable<Desafio_Luma.Models.Local>

@{
    ViewData["Title"] = "Locais Proximos";
}

<h1>Locais Proximos</h1>


<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-primary text-white">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CordenadaX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CordenadaY)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CordenadaX)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CordenadaY)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CordenadaY)
                </td>
            </tr>
        }
    </tbody>
