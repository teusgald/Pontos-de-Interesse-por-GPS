@model IEnumerable<Desafio_Luma.Models.Local>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Locais Cadastrados</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Local</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-primary text-white">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CordenadaX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CordenadaY)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CordenadaX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CordenadaY)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
